---
layout: base.njk
---

<style>
    p {
        padding-bottom: 12px;
    }
</style>

<div class="mx-auto max-w-4xl py-3">
    <div class="flex flex-row relative">
        <h1 class="sm:text-6xl md:text-6xl lg:max-2xl:text-2xl basis-3/5">{{ title }}</h1>
        <div class="relative basis-2/5">
            <h2 class="absolute top-8 right-0">{{ date | dateFilter }}</h2>
        </div>
    </div>
    <div class="tags--container">
tags: 
{% set total = tags | length %}
{% set index = 0 %}
{% for tag in tags %}
    {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
    {% set index = index + 1 %}
    {% if tag != "post" %}
    <a class="text-[{{ style.colors.accent }}]" href="{{ tagUrl | url }}">{{ tag }}</a>{% if index < total %},{% endif %}
    {% endif %}
{% endfor %}
</div>
    <hr class="pb-1 mt-2">
</div>
<div class="mx-auto max-w-4xl">
    {{ content | safe }}
</div>